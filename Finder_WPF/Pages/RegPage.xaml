<Page x:Class="Finder_WPF.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finder_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="RegPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Registration"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Grid.ColumnSpan="2"/>

        <TextBlock Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Text="Login"/>
        <TextBlock Grid.Row="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Text="Username"/>
        <TextBlock Grid.Row="3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Text="Password"/>
        <TextBlock Grid.Row="4"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Text="ConfirmPassword"/>
        
        <TextBox Grid.Row="1" 
                 Margin="10"
                 Grid.Column="1"
                 x:Name="LoginBox"
                 FontSize="24"
                 VerticalContentAlignment="Center"/>
        <TextBox Grid.Row="2"
                 Margin="10"
                 Grid.Column="1"
                 x:Name="UserNameBox"
                 FontSize="24"
                 VerticalContentAlignment="Center"/>
        <PasswordBox Grid.Row="3"
                 Margin="10"
                 Grid.Column="1"
                 x:Name="UserPasswordBox"
                 FontSize="24"
                 VerticalContentAlignment="Center"/>
        <PasswordBox Grid.Row="4"
                 Margin="10"
                 Grid.Column="1"
                 x:Name="ConfirmPasswordBox"
                 FontSize="24"
                 VerticalContentAlignment="Center"/>

        <Button Grid.Row="5"
                Content="Sign In"
                Margin="30, 10"
                FontSize="30"
                Click="ToAuthPage"/>

        <Button Grid.Row="5" 
                Grid.Column="1"
                Content="Continue"
                Margin="30, 10"
                FontSize="30"
                Click="SaveNewUser"/>


    </Grid>
</Page>
